<template id="main">
    <head>
        <link src="/assets/styles.css"/>
    </head>
    <body>
        <section title="Users" surface="column.left.top">
            <ol id="users" on.item.selected="\App\UserController@openPrivateChat">
                <li value="wtf?">User</li>
            </ol>
        </section>
        <section surface="column.left.bottom">
            <button on.press="\App\UserController@login">Load</button>
        </section>
        <section title="History" surface="column.right.top">
            <textarea id="info"/>
        </section>
        <section title="Message" surface="column.right.bottom">
            <input id="message"/>
            <button id="send" on.press="\App\UserController@sendMessage">Send</button>
        </section>
    </body>
</template>
